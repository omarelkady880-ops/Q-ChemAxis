# Q-ChemAxis Environment Configuration
# Copy this file to .env and fill in your actual values

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
DATABASE_URL="./server/qvision.db"

# ==========================================
# SECURITY & AUTHENTICATION
# ==========================================
# JWT Secret - Generate a secure random string (32+ characters)
# You can use: openssl rand -hex 32
JWT_SECRET="your-super-secure-jwt-secret-here-change-this-in-production"

# Session Secret - Another secure random string
SESSION_SECRET="your-session-secret-here-change-this-too"

# ==========================================
# AI INTEGRATION (Mistral AI)
# ==========================================
# Get your API key from: https://console.mistral.ai/
MISTRAL_API_KEY="your-mistral-api-key-here"

# AI Model Configuration
VITE_MODEL="mistral-medium"

# API URL for Mistral AI
VITE_API_URL="https://api.mistral.ai/v1/chat/completions"

# ==========================================
# APPLICATION SETTINGS
# ==========================================
# Environment (development/production)
NODE_ENV="development"

# Server Port
PORT=3001

# Frontend Development Server Port (used by Vite)
VITE_DEV_PORT=5173

# ==========================================
# MONITORING & LOGGING
# ==========================================
# Rollbar Access Token (for error monitoring)
# Get from: https://rollbar.com/
ROLLBAR_ACCESS_TOKEN="your-rollbar-token-here"

# Rollbar Environment
ROLLBAR_ENVIRONMENT="development"

# ==========================================
# DEVELOPMENT SETTINGS
# ==========================================
# Enable debug logging
DEBUG=false

# Enable CORS for development
CORS_ORIGIN="http://localhost:5173"

# ==========================================
# PRODUCTION SETTINGS
# ==========================================
# Production API URL (when deploying)
# PRODUCTION_API_URL="https://your-api-domain.com/api/mistral"

# Database backup settings
DB_BACKUP_ENABLED=true
DB_BACKUP_INTERVAL="24h"

# ==========================================
# OPTIONAL: EXTERNAL SERVICES
# ==========================================
# Google Analytics (optional)
# GA_TRACKING_ID=""

# Sentry DSN (alternative error monitoring)
# SENTRY_DSN=""

# Redis URL (for caching in production)
# REDIS_URL=""

# ==========================================
# SECURITY NOTES
# ==========================================
# ⚠️  IMPORTANT:
# - Never commit the .env file to version control
# - Use different secrets for development and production
# - Rotate secrets regularly
# - Keep API keys secure and monitor usage
